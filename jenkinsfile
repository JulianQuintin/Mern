pipeline {
    agent any

    environment {
        DOCKER_CMD = '/usr/local/bin/docker'  // Ruta absoluta a Docker
        DOCKER_IMAGE = "julianquintin/mern-mysql-crud-master:local-${env.BUILD_NUMBER}"
        DOCKERFILE_PATH = 'dockerfile'  // Ruta relativa a tu Dockerfile
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "Clonando repositorio..."
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/JulianQuintin/Mern.git',
                        credentialsId: 'GitHubtoken2'
                    ]]
                ])
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Construyendo imagen Docker..."
                    sh """
                        ${env.DOCKER_CMD} build \
                            -t ${env.DOCKER_IMAGE} \
                            -f ${env.DOCKERFILE_PATH} .
                    """
                }
            }
        }

        stage('Verify Image') {
            steps {
                script {
                    echo "Verificando imagen construida..."
                    sh "${env.DOCKER_CMD} images | grep ${env.DOCKER_IMAGE.split(':')[0]}"
                }
            }
        }
    }

    stage('Deploy to Kubernetes') {
    steps {
        script {
            sh """
                # Crea el namespace si no existe
                kubectl get namespace ${env.NAMESPACE} || kubectl create namespace ${env.NAMESPACE}

                # Aplica los archivos YAML
                kubectl apply -f k8s/mysql-deployment.yaml -n ${env.NAMESPACE}
                kubectl apply -f k8s/app-deployment.yaml -n ${env.NAMESPACE}
                kubectl apply -f k8s/service.yaml -n ${env.NAMESPACE}

                # Actualiza la imagen
                kubectl set image deployment/mern-crud-app mern-crud-app=${env.DOCKER_IMAGE} -n ${env.NAMESPACE}
                kubectl rollout status deployment/mern-crud-app -n ${env.NAMESPACE} --timeout=300s
            """
            }
        }
    }
    

    post {
        always {
            echo "Pipeline finalizado - Imagen: ${env.DOCKER_IMAGE}"
            sh "${env.DOCKER_CMD} system prune -f || true"  // Limpieza
        }
    }
}